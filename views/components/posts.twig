<div x-show="currentRoute === 'posts' && !loading" x-cloak>
    <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">üìù Blog Posts</h2>
        
        <div class="space-y-4" x-show="posts.length > 0">
            <template x-for="post in posts" :key="post.id">
                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-semibold text-gray-800" x-text="post.title"></h3>
                        <span class="text-sm text-gray-500" x-text="post.published_at"></span>
                    </div>
                    <p class="text-gray-600 mb-3" x-text="post.excerpt"></p>
                    <div class="flex items-center justify-between">
                        <div class="flex space-x-2">
                            <template x-for="tag in post.tags" :key="tag.slug">
                                <span class="px-2 py-1 text-xs rounded-full text-white"
                                      :style="`background-color: ${tag.color}`"
                                      x-text="tag.name"></span>
                            </template>
                        </div>
                        <span class="text-sm text-gray-500">by <span x-text="post.author_name"></span></span>
                    </div>
                </div>
            </template>
        </div>
        
        <div x-show="posts.length === 0" class="text-center py-8 text-gray-500">
            No posts available
        </div>
    </div>
</div>
