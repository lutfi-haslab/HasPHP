# Application Configuration
APP_NAME=HasPHP
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration
DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=database/database.sqlite
DB_USERNAME=root
DB_PASSWORD=

# For MySQL/PostgreSQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=hasphp
# DB_USERNAME=root
# DB_PASSWORD=secret

# OpenSwoole Configuration
SWOOLE_WORKERS=4
SWOOLE_TASK_WORKERS=2
SWOOLE_MAX_CONNECTIONS=1000
SWOOLE_MAX_REQUESTS=10000
SWOOLE_DAEMON=false
SWOOLE_LOG_LEVEL=SWOOLE_LOG_INFO

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=hasphp

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (if needed)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Third-party APIs (if needed)
# API_KEY=your-api-key
# SECRET_KEY=your-secret-key
